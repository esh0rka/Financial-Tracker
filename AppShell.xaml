<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Financical_Traker_GUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Financical_Traker_GUI.GUI"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="LoginPage" />

    <ShellContent
        ContentTemplate="{DataTemplate local:FirstAccountSettingsPage}"
        Route="FirstAccountSettingsPage" />

    <ShellContent
        ContentTemplate="{DataTemplate local:SettingsPage}"
        Route="SettingsPage" />

    <ShellContent
        ContentTemplate="{DataTemplate local:MainViewPage}"
        Route="MainViewPage" />

</Shell>

